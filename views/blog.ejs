<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <title>home</title>
  </head>
  <body>
    <%- include("./partials/nav") %>

    <div class="container">
      <h1 class="mt-3"><%= theBlog.title %></h1>

      <img src="<%= theBlog.coverImage %>" class="mt-3" width="800px" />

      <pre class="mt-3"><%= theBlog.body %></pre>

      <div class="d-flex">
        <img src="<%= theBlog.writtenBy.profileImageUrl %>" width="50px" />

        <h5 class="m-3"><%= theBlog.writtenBy.fullName %></h5>
      </div>

      <h3 class="mt-4">Comments(<%= comments.length %>)</h3>

      <% if (locals.userInfo) { %>
        <form action="/blog/comment/<%= theBlog._id %>" method="post">
          <input
            type="text"
            class="form-control"
            placeholder="Enter your comment here."
            name="content"
          />
          <button class="btn btn-primary mt-2" type="submit">post</button>
        </form>
      <% } %>

      

      <div class="mt-4">
        <% comments.forEach(comment => { %>
        <div>
          <div class="d-flex">
            <img
              src="<%= comment.commentedBy.profileImageUrl %>"
              width="40px"
            />
            <p class="fw-bold m-2"><%= comment.commentedBy.fullName %></p>
          </div>
          <div>
            <p><%= comment.content %></p>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <%- include("./partials/script") %>
  </body>
</html>
